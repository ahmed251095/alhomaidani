<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_company_form_inherit_sale_cover" model="ir.ui.view">
      <field name="name">res.company.form.sale.cover</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet/notebook" position="inside">
          <page string="Report Cover">
            <group>
              <field name="sale_report_cover" widget="image" class="oe_avatar" filename="sale_report_cover_filename"/>
              <field name="sale_report_cover_fit"/>
            </group>
            <label string="This image is intended to be used as a first-page cover in QWeb reports. Include the provided template snippet in your report to render it."/>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>