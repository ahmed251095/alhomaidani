<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Reusable cover page snippet -->
    <template id="cover_page" name="Company Sale Cover Page">
      <t t-set="company" t-value="(doc and doc.company_id) or res_company"/>
      <div class="page cover-page" style="direction: rtl; text-align: center; padding:0; margin:0;">
        <t t-if="company.sale_report_cover">
          <img t-att-src="'/web/image/res.company/%s/sale_report_cover' % company.id"
               t-att-style="'width:100%; height:100%; object-fit:%s; display:block; margin:0;'"
               t-attf-style="'object-fit: #{company.sale_report_cover_fit or 'cover'};'"/>
        </t>
        <t t-else="">
          <img src="/company_sale_report_cover/static/src/img/default_cover.jpg"
               style="width:100%; height:100%; object-fit: cover; display:block; margin:0;"/>
        </t>
      </div>
    </template>
  </data>
</odoo>