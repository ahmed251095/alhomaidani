<odoo>
    <!-- Local category to avoid external id issues -->
    <record id="module_category_sales_approval" model="ir.module.category">
        <field name="name">Sales Approval</field>
        <field name="sequence">20</field>
    </record>

    <!-- Level 1 approvers -->
    <record id="group_sale_approve_level1" model="res.groups">
        <field name="name">Approve Quotation (Level 1)</field>
        <field name="category_id" ref="sale_approval_flow_v2.module_category_sales_approval"/>
    </record>
    <!-- Level 2 approvers -->
    <record id="group_sale_approve_level2" model="res.groups">
        <field name="name">Approve Quotation (Level 2)</field>
        <field name="category_id" ref="sale_approval_flow_v2.module_category_sales_approval"/>
        <field name="implied_ids" eval="[(4, ref('sale_approval_flow_v2.group_sale_approve_level1'))]"/>
    </record>
</odoo>