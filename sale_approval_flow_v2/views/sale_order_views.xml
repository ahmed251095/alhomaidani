<odoo>
  <data>
    <record id="view_order_form_inherit_approval" model="ir.ui.view">
      <field name="name">sale.order.form.approval.flow.v2</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <button name="action_submit_for_approval"
                  string="Submit for Approval"
                  type="object"
                  invisible="not (state in ['draft','sent'] and approval_state in ['draft','rejected'])"/>
          <button name="action_approve_level1"
                  string="موافقة إصدار عرض السعر"
                  type="object"
                  class="btn-primary"
                  groups="sale_approval_flow_v2.group_sale_approve_level1"
                  invisible="not (state in ['draft','sent'] and approval_state == 'waiting')"/>
          <button name="action_approve_level2"
                  string="موافقة التحويل إلى مشروع"
                  type="object"
                  class="btn-primary"
                  groups="sale_approval_flow_v2.group_sale_approve_level2"
                  invisible="not (state in ['draft','sent'] and approval_state == 'level1')"/>
          <button name="action_reject_open_wizard"
                  string="Reject"
                  type="object"
                  class="btn-secondary"
                  groups="sale_approval_flow_v2.group_sale_approve_level1,sale_approval_flow_v2.group_sale_approve_level2"
                  invisible="not (state in ['draft','sent'] and approval_state in ['waiting','level1'])"/>
        </xpath>

        <xpath expr="//button[@name='action_confirm']" position="attributes">
          <attribute name="invisible">not (state in ['draft','sent'] and approval_state == 'approved')</attribute>
        </xpath>

        <xpath expr="//sheet/notebook" position="inside">
          <page string="Approval">
            <group>
              <field name="approval_state" readonly="1"/>
              <field name="approver1_id" readonly="1"/>
              <field name="approver1_date" readonly="1"/>
              <field name="approver2_id" readonly="1"/>
              <field name="approver2_date" readonly="1"/>
              <field name="approval_note"/>
              <field name="rejection_reason" readonly="1" invisible="approval_state != 'rejected'"/>
            </group>
          </page>
        </xpath>
      <xpath expr="//button[@name='action_create_invoice']" position="attributes"><attribute name="invisible">not (state in ['sale'] and approval_state == 'approved')</attribute></xpath>

      <xpath expr="//button[@name='action_view_invoice']" position="attributes"><attribute name="invisible">not (state in ['sale'] and approval_state == 'approved')</attribute></xpath>

      </field>
    </record>

    <record id="view_sale_approval_reject_wizard" model="ir.ui.view">
        <field name="name">sale.approval.reject.wizard.form</field>
        <field name="model">sale.approval.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Quotation">
                <sheet>
                    <group>
                        <field name="sale_id" invisible="1"/>
                        <field name="reason" placeholder="أكتب سبب الرفض..." required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reject" type="object" string="Reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        <xpath expr="//button[@name='action_create_invoice']" position="attributes"><attribute name="invisible">not (state in ['sale'] and approval_state == 'approved')</attribute></xpath>

      <xpath expr="//button[@name='action_view_invoice']" position="attributes"><attribute name="invisible">not (state in ['sale'] and approval_state == 'approved')</attribute></xpath>

      </field>
    </record>
  </data>
</odoo>