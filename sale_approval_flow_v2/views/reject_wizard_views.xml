<odoo>
    <record id="view_sale_approval_reject_wizard" model="ir.ui.view">
        <field name="name">sale.approval.reject.wizard.form</field>
        <field name="model">sale.approval.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Reject Quotation">
                <sheet>
                    <group>
                        <field name="sale_id" invisible="1"/>
                        <field name="reason" placeholder="Write the rejection reason..." required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reject" type="object" string="Reject" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>