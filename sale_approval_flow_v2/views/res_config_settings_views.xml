<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_sale_approval" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.sale.approval</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='sales_security']" position="inside">
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <label for="approval_two_stage"/>
                <div class="text-muted">Require Level 2 based on toggle and amount threshold.</div>
                <div class="content-group">
                  <field name="approval_two_stage"/>
                  <field name="approval_l2_threshold" invisible="not approval_two_stage"/>
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>