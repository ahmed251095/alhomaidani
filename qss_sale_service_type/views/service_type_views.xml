<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">sale.product.service.type.tree</field>
        <field name="model">sale.product.service.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">sale.product.service.type.form</field>
        <field name="model">sale.product.service.type</field>
        <field name="arch" type="xml">
            <form string="Product/Service Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="company_id"/>
                        <field name="active"/>
                        <field name="note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">أنواع المنتجات والخدمات</field>
        <field name="res_model">sale.product.service.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p>أنشئ أنواع المنتجات والخدمات لكل شركة. اترك الشركة فارغة لتجعلها متاحة لكل الشركات.</p>
        </field>
    </record>

    <!-- Put it under Sales ▸ Configuration -->
    <menuitem id="menu_service_type_root"
              name="أنواع المنتجات والخدمات"
              parent="sale.menu_sale_root"
              action="action_service_type"
              sequence="45"/>
</odoo>
