<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Multi-company record rule: users see their companies' records or shared (company_id is False) -->
    <record id="sale_service_type_multi_company_rule" model="ir.rule">
        <field name="name">Service Type per company</field>
        <field name="model_id" ref="model_sale_product_service_type"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', user.company_ids.ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
