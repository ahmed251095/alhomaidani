<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_order_form_inherit_extra_html_button" model="ir.ui.view">
      <field name="name">sale.order.form.extra.html.button</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/header" position="inside">
          <button name="action_set_extra_as_company_default"
                  type="object"
                  class="btn-secondary"
                  string="Set as Company Default"
                  attrs="{'invisible': [('extra_print_html','=',False)]}"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
