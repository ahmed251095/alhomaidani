<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Add a field in Sales Settings -->
    <record id="view_res_config_settings_extra_html" model="ir.ui.view">
      <field name="name">res.config.settings.extra.html.default</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')][.//h2[contains(text(),'Quotations')]]" position="inside">
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane"/>
              <div class="o_setting_right_pane">
                <label for="extra_print_html_default"/>
                <div class="text-muted">Default HTML that will auto-fill the 'صور الطباعة/HTML' tab on new quotations.</div>
                <field name="extra_print_html_default" nolabel="1" placeholder="Paste your default HTML here..."/>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
