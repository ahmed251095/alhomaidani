<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_res_config_settings_sale_extra_html" model="ir.ui.view">
      <field name="name">res.config.settings.sale.extra.html</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//div[@id='sale_order']/div[hasclass('row')]" position="inside">
          <div class="col-12 col-lg-12 o_setting_box">
            <div class="o_setting_left_pane">
              <span class="fa fa-file-text-o"/>
            </div>
            <div class="o_setting_right_pane">
              <label for="default_extra_print_html"/>
              <div class="text-muted">HTML inserted automatically into new Quotations' Extra Print HTML (if the field exists).</div>
              <field name="default_extra_print_html" nolabel="1" placeholder="Paste your default HTML here..."/>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>