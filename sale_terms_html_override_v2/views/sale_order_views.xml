<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_note_html_priority" model="ir.ui.view">
        <field name="name">sale.order.form.note.html.priority</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">2000</field>
        <field name="arch" type="xml">
            <xpath expr="//sheet//field[@name='note']" position="attributes">
                <attribute name="widget">html</attribute>
                <attribute name="options">{'style-inline': true}</attribute>
                <attribute name="placeholder">اكتب الشروط والأحكام هنا...</attribute>
            </xpath>
        </field>
    </record>
</odoo>
