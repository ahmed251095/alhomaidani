<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_note_html_priority" inherit_id="sale.report_saleorder_document">
        <!-- Replace inner container under terms_and_conditions to print raw HTML -->
        <xpath expr="//div[@id='terms_and_conditions']" position="replace">
            <div id="terms_and_conditions" t-if="o.note" class="mt16">
                <h4>Terms &amp; Conditions</h4>
                <div t-raw="o.note"/>
            </div>
        </xpath>
    </template>
</odoo>
