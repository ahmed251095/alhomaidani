<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit the Sale Order form and restrict the partner_id domain to customers only -->
    <record id="view_order_form_customer_filter" model="ir.ui.view">
        <field name="name">sale.order.form.customer.filter</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="attributes">
                <attribute name="domain">[('customer_rank','&gt;',0)]</attribute>
            </field>
        </field>
    </record>
<!-- Inherit the Purchase Order form and restrict the partner_id domain to vendors only -->
<record id="view_purchase_order_form_vendor_filter" model="ir.ui.view">
    <field name="name">purchase.order.form.vendor.filter</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        <field name="partner_id" position="attributes">
            <attribute name="domain">[('supplier_rank','&gt;',0)]</attribute>
        </field>
    </field>
</record>
</odoo>