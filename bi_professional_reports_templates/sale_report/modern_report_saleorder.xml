            <span t-if="company.partner_id.street2" t-field="company.partner_id.street2"/><br t-if="company.partner_id.street2"/>
            <span t-if="company.partner_id.city" t-field="company.partner_id.city"/><br t-if="company.partner_id.city"/>
            <span t-if="company.partner_id.country_id" t-field="company.partner_id.country_id"/><br t-if="company.partner_id.country_id"/>
            <span t-if="company.partner_id.vat" t-field="company.partner_id.vat"/><br t-if="company.partner_id.vat"/>
          </div>
        </div>
      </div>

