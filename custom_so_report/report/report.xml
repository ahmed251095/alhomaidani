<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <record id="action_saleorder_custom_raw" model="ir.actions.report">
        <field name="name">Custom Sale Order Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_so_report.report_saleorder_custom</field>
        <field name="report_file">custom_so_report.report_saleorder_custom</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_background_image">
        <t t-call="web.html_container">
            <div class="page"
                 style="background-image: url('/custom_so_report/static/src/img/letterhead.jpg');
                        background-size: 100% 100%;">
                <!-- <t t-raw="0"/> -->
                <t t-out="0"/>
            </div>
        </t>
    </template>

    <template id="report_saleorder_custom">
        <t t-call="custom_so_report.report_background_image">
            <t t-foreach="docs" t-as="doc">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
                <div class="oe_structure"/>
                <div id="content" style="margin:100px 50px 150px 50px;">
                    <span t-field="doc.report_field"/>
                </div>
            </t>
        </t>
    </template>

</odoo>