<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Show link back to Task on the PO form (internal users only) -->
    <record id="purchase_order_form_inherit_task_link" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.task.link</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[1]/group" position="after">
                <group string="Task Link" groups="base.group_user">
                    <field name="task_id" options="{'no_create_edit': True}"/>
                    <field name="origin"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
