<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_order_form_inherit_extra_html" model="ir.ui.view">
      <field name="name">sale.order.form.extra.html</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
          <page string="نص إضافي للطباعة">
            <field name="extra_print_html" widget="html"
                   options="{'sanitize': False, 'style-inline': True}"
                   placeholder="اكتب هنا أي محتوى HTML تريد طباعته بعد الشروط..."/>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
